#!/bin/bash

# Global defaults:
BIN_NAME=`basename $0 | awk -F. '{print $1}'`
PACKAGE_DIR=`dirname $0`
BINARY_DIR=${PACKAGE_DIR}/bin
WORKING_DIR=${PACKAGE_DIR}/local
LOGFILE=${PACKAGE_DIR}/${BIN_NAME}.log
PID=${PACKAGE_DIR}/${BIN_NAME}.pid
TZ="US/Eastern"

echo "DIR = $PACKAGE_DIR"
case `uname` in
Linux)
	# export JAVA_HOME=/opt/jdk1.6
	export JAVA_HOME=/home/lab616/jrrt-3.1.0-1.6.0
	# Start vncserver
	vncserver :1
	export DISPLAY=localhost:1
;;
Darwin)
	export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home
;;
*)
	echo "JAVA_HOME must be set."
	exit -1
;;
esac

export PATH=${JAVA_HOME}/bin:$PATH

echo `which java`
echo `java -version`


JVM_ARGS="-Djava.library.path=${BINARY_DIR} -server -Xmx1024M -Duser.timezone=${TZ}"
CP="./IBJts/jts.jar:./IBJts/pluginsupport.jar:./IBJts/riskfeed.jar:./IBJts/hsqldb.jar:./IBJts/jcommon-1.0.12.jar:./IBJts/jfreechart-1.0.9.jar:./IBJts/jhall.jar:./IBJts/other.jar:./IBJts/rss.jar"
JAVA_COMMAND="nohup java ${JVM_ARGS} -cp ${CP} jclient.LoginFrame IBJts"

###########################################################
# Package-specific parameters:

ARGS=""
${JAVA_COMMAND} ${ARGS} $@ &>${LOGFILE} &

# Send the pid to a file (last process captured in $!)
echo $! > ${PID}

tail -f ${LOGFILE}
